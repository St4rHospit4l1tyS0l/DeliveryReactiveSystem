@model CentralManagement.Models.LoginViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Call Center | Ingresar</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/animate.css" rel="stylesheet">
    <link href="~/Content/style.css" rel="stylesheet">
    <link href="~/Content/Site.css" rel="stylesheet">

</head>
<body class="gray-bg" ng-app="licenseDr" ng-cloak ng-controller="loginController">
    <div class="blocker" ng-show="working">
        <div>
            Procesando...<img src="~/Content/img/ajax_loader.gif" />
        </div>
    </div>
    <div class="middle-box text-center loginscreen  animated fadeInDown">
        <div ng-show="isLogin">
            <div>
                <h1 class="logo-name">CM</h1>
            </div>
            <h3>Call Center Management</h3>
            <p>Ingrese sus credenciales</p>
            <form id="loginForm" name="loginForm" class="m-t" role="form">
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <input type="text" id="Email" name="Email" ng-model="m.email" class="form-control fix-control" placeholder="Usuario" />
                </div>
                <div class="form-group">
                    <input type="password" id="Password" name="Password" ng-model="m.password" class="form-control fix-control" placeholder="Contraseña" />
                </div>
                <br />
                <div ng-show="m.email && m.password">
                    <button ng-click="login('#loginForm', '@Url.Action("Login", "Account")')" class="btn btn-primary block full-width m-b">Ingresar</button>
                </div>
                <br />
                <br />
                <div class="alert alert-danger" ng-show="msgErr">
                    {{msgErr}}
                </div>
                <br />  
                <a href="#" ng-click="isLogin = false;">
                    Olvidó su contraseña
                    <i class=" fa fa-arrow-right"></i>
                </a>
            </form>
            <p class="m-t"> <small>Star Hospitality Solutions &copy; @DateTime.Today.Year.ToString()</small> </p>
        </div>
        <div ng-show="!isLogin">
            <div>
                <h1 class="logo-name">CM</h1>
            </div>
            <h3>Call Center Management</h3>
            <p>Recuperar contraseña</p>
            <p>Ingrese su correo para recibir las instrucciones</p>
            <form id="forgetForm" name="forgetForm" class="m-t" role="form">
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <input type="text" id="Email" name="Email" ng-model="m.emailForgot" class="form-control" placeholder="Correo electrónico" />
                </div>
                <br />
                <div ng-show="m.emailForgot">
                    <button ng-click="doForget('#forgetForm', '@Url.Action("ForgotPassword", "Account")')" class="btn btn-primary block full-width m-b">Enviar</button>
                </div>
                <br />
                <br />
                <div class="alert alert-danger" ng-show="msgErrForgot">
                    {{msgErrForgot}}
                </div>

                <div class="alert alert-success" ng-show="msgSucForgot">
                    {{msgSucForgot}}
                </div>
                <br />
                <a href="#" ng-click="isLogin = true;">
                    <i class="fa fa-arrow-left"></i>
                    Regresar
                </a>
            </form>
            <p class="m-t"> <small>Star Hospitality Solutions &copy; @DateTime.Today.Year.ToString()</small> </p>
        </div>
    </div>
    <script src="~/Scripts/jquery-2.1.3.min.js"></script>
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/app/main/licenseDr.js"></script>
    <script src="~/Scripts/app/ctrl/loginCtrl.js"></script>
</body>
</html>
